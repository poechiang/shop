.trolley-icon::after{
	content:"\e98f";
}

.icon-del::before,
.del-icon::after{
	content:"\e889";
}
.icon-post::before,
.post-icon::after{
	content:"\e738";
}
.icon-more::before,
.more-icon::after{
	content:"\e7e6";
}
.icon-top::before,
