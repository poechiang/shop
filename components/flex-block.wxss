.share-icon::after{
	content:"\e6e8";
}

.blocks{
	position: fixed;
	z-index: 100050;
}
.blocks .block{
	display: table;
	border-radius: 5px;
}

.blocks .block:not(:first-child){
	margin-top:5px;
}
.blocks.light .block{
	background-color:rgba(255,255,255,.5);
	color:#414141;
}
.blocks.dark .block{
	background-color:rgba(0,0,0,.5);
	color:#ffffff;
}
.blocks .block .cell{
	display: table-cell;
	width:100%;
	height: 100%;
	vertical-align: middle;
	text-align: center;
	position: relative;
}

.blocks .block .cell .bullet{
	position: absolute;
	font-size: 9px;
	background-color:#FFEF00;
	color:#000000;
	width:12px;
	height: 12px;
	line-height:12px;
	text-align: 12px;
	border-radius: 6px;
	left:5px;
	top:5px;
}
.blocks .block .cell .bullet.more{
	width:6px;
	height: 6px;
	border-radius: 3px;
	left:7px;
	top:7px;
}