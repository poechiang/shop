/* components/tab-bar.wxss */
.tab-bar{
	width:100%;
	bottom:0;
	text-align: center;
	background-color:rgba(0,0,0,.8);
	position: fixed;
	z-index: 99999;
	transition: top .2s ease-in-out;
	-webkit-transition: top .4s ease-in-out;
	-moz-transition: top .4s ease-in-out;
	-o-transition: top .4s ease-in-out;
}

.tab-bar .tab{
	border: none;
	line-height: inherit;
	position: relative;
	color:#fff;
}
.tab-bar .tab .icon{
	vertical-align: 2px;
}
.tab-bar .tab .icon-zaned{
	color:#ff5722;
}
