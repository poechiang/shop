/* components/reply.js.wxss */

.reply{
	width:100%;
	bottom:-60px;
	background-color:#202022;
	color:#a5a5a5;
	position: fixed;
	-webkit-transition: bottom .2s ease-in-out;
	-moz-transition: bottom .2s ease-in-out;
	-o-transition: bottom .2s ease-in-out;
	transition: bottom .2s ease-in-out;
}
.reply.shown{
	bottom:0;
}
.reply .content{
	color:#a5a5a5;
}


.reply .rect.back{
	color:#a5a5a5;
}
.reply .icon{
	text-align: center;
}


