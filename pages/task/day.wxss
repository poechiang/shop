/* pages/task/day.wxss */
page{
	color:#8D8D8D;
}
.box{
	background-color:#202022;
	border-radius: 20rpx;
	padding:20rpx 30rpx;
}
.rec-btn{
	width:96rpx;
	height:96rpx;
	border-radius: 50%;
	background-color:#000000;
	line-height: 96rpx;
	border:none;
	padding:0;
}
.clickable-box,.demo{
	border-radius: 20rpx;
	width:275rpx;
	height:275rpx;
}
.clickable-box.demo{
	background-color: #000000;
}
.clickable-box.upload{
	background-color: #181818;
}


.get-lm{
	position: fixed;
	top:0;
	bottom: 0;
	left:0;
	right:0;
	display: table;
	width: 100%;
	height:100%;
	z-index: 10;
}
.get-lm .inner{
	display: table-cell;
	vertical-align: middle;
	text-align: center;
}
.get-lm .inner .box{
	width:600rpx;
	margin:auto;
	border-radius:30rpx;
	background-color:rgba(0,0,0,.9);
	font-size:1.3em;
	line-height:2;
	font-weight:200;
	padding:120rpx 0 100rpx;
}