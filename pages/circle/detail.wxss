/* pages/circle/detail.wxss */
page{
	padding-bottom: 60px;
}
.art-title button{
	padding:0 5px!important;
	margin-left:5px;
	line-height: 30px!important;
	height: 30px!important;
	font-size: 14px;
}
.art-title button .icon{
	font-size: 1em;
}
.attach{
	background-color: transparent;
	padding:10rpx;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	width:690rpx;


}
.attach.pic-box{
	padding:6rpx;

}
.attach.pic-box .pic{
  border-radius: 40rpx;
	border:6rpx solid transparent;
	width:678rpx;
	height:678rpx;
	display: block;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
}
.attach.pic-box.items-2 .pic,
.attach.pic-box.items-4 .pic,
.attach.pic-box.items-5 .pic:nth-child(1),
.attach.pic-box.items-5 .pic:nth-child(2),
.attach.pic-box.items-7 .pic,
.attach.pic-box.items-8 .pic:nth-child(1),
.attach.pic-box.items-8 .pic:nth-child(2){
	width:339rpx;
	height:339rpx;
}
.attach.pic-box.items-3 .pic,
.attach.pic-box.items-5 .pic,
.attach.pic-box.items-6 .pic,
.attach.pic-box.items-7 .pic:nth-child(3),
.attach.pic-box.items-7 .pic:nth-child(4),
.attach.pic-box.items-7 .pic:nth-child(5),
.attach.pic-box.items-8 .pic,
.attach.pic-box.items-9 .pic{
	width:226rpx;
	height:226rpx;
}

.attach.pic-box.items-4 .pic,
.attach.pic-box.items-5 .pic,
.attach.pic-box.items-6 .pic,
.attach.pic-box.items-7 .pic,
.attach.pic-box.items-8 .pic,
.attach.pic-box.items-9 .pic{
	height:226rpx!important;
}


.art-body .topic{
	color:#59CBCE;
}

.foot{
	font-size: 14px;
	margin:10px 0;
}
.foot .loc{
	padding:2px 10px;
	background-color:#efefef;
	border-radius: 24px;
}
.foot navigator{
	vertical-align: middle;
	padding:2px 8px;
}
.msg .msg-type-list{
	font-size: 14px;
	padding:6px;
}
.msg .msg-type-list .msg-type{
	color:#616161;
	padding:10rpx;
	margin:0 5px;
}
.msg .msg-type-list .msg-type.selected{
	color:#9f9f9f;
}

.msg .msg-list .msg-item:not(:last-child)::after,
.msg .col-list .col-item:not(:last-child)::after,
.msg .fav-list .fav-item:not(:last-child)::after{
	content:"";
	position:absolute;
	width:calc(100% - 50px);
	right:0;
	bottom:0;
	height:0;
	border-bottom:1px solid #292929;
}
.status{
	width:100%;
	bottom:0;
	text-align: center;
	background-color:#202022;
  color:#989898;
	-webkit-transition: bottom .4s ease-in-out;
	-mos-transition: bottom .4s ease-in-out;
	-o-transition: bottom .4s ease-in-out;
	transition: bottom .4s ease-in-out;
}
.status button{
	border: none;
	line-height: inherit;
  color:#989898;
}

.status button[disabled]{
  background-color: transparent!important;
  color:#FD8F71!important;
}
.user-nick{
  color:#e0e0e0;
}