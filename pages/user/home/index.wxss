.art-title button{
	padding:0 5px!important;
	margin-left:5px;
	line-height: 30px!important;
	height: 30px!important;
	font-size: 14px;
}
.art-title button .icon{
	font-size: 1em;
}
.attach{
	background-color: transparent;
	/* padding:10rpx; */
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	width:590rpx;
}
.attach.pic-box .pic{
	border:6rpx solid transparent;
  border-radius: 20rpx;
	width:100%;
	display: block;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
}
.attach.pic-box.items-2 .pic,
.attach.pic-box.items-4 .pic,
.attach.pic-box.items-5 .pic,
.attach.pic-box.items-6 .pic,
.attach.pic-box.items-7 .pic,
.attach.pic-box.items-8 .pic,
.attach.pic-box.items-9 .pic{
	width:180rpx;
	height:180rpx;
}


.foot{
	height:60rpx;
	font-size: 14px;
	margin:10rpx 0;
}
.foot .op{
	color:#666666;
	line-height: 60rpx;

}
.foot .op[disabled]{
	color:#414141!important;
	background-color:transparent!important;
}
.foot .op .icon.done{
	color:#FD8F71;
}